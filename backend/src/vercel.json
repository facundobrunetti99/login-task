{
    "version": 2,
    "builds": [
        {
            "src": "backend/src/index.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "backend/src/index.js"
        }
    ],
    "env": {
        "NODE_ENV": "production",
        "API_KEY": "@api_key"
    },
    "functions": {
        "backend/src/index.js": {
            "memory": 512,
            "maxDuration": 10
        }
    },
    "regions": ["sfo1", "iad1", "bru1"],
    "alias": "my-backend-service",
    "ignore": [
        "node_modules",
        ".git",
        "README.md",
        "LICENSE"
    ]
    
}